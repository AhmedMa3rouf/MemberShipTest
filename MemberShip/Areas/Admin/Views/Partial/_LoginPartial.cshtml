@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    
    <li>

        <a href="#">مرحبا @User.Identity.Name</a>
        <ul class="dropdown">
            <li><a asp-controller="Account" asp-action="UserProfile">ملف المستخدم</a></li>
            <li>
                <form class="form-inline" asp-controller="account" asp-action="logout">
                    <button type="submit" class="dropdown-btn">تسجيل خروج</button>
                </form>
            </li>
        </ul>
    </li>
}
else
{

    <li>
        <a asp-controller="Account" asp-action="Login">تسجيل دخول</a>
    </li>
}

